@model LojaShopping.Web.Models.ProductViewModel
<form asp-action="CriarProduto">
    <br />
    <div class="container border p-3">
        <h1 class="text-primary"> Criando Produto</h1>
        <hr />
        <div class="row">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="col-2">
                <label asp-for="Name" class="control-label pt-2" style="font-size: 20px;">Nome</label>
            </div>
            <div class="col-10 pb-3">
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>

            <div class="col-2">
                <label asp-for="NomeCategoria" class="control-label pt-2" style="font-size: 20px;">Categoria</label>
            </div>
            <div class="col-10 pb-3">
                <input asp-for="NomeCategoria" class="form-control" />
                <span asp-validation-for="NomeCategoria" class="text-danger"></span>
            </div>

            <div class="col-2">
                <label asp-for="Descricao" class="control-label pt-2" style="font-size: 20px;">Descrição</label>
            </div>
            <div class="col-10 pb-3">
                <textarea asp-for="Descricao" class="form-control" rows="5"> </textarea>
                <span asp-validation-for="Descricao" class="text-danger"></span>
            </div>


            <div class="col-2">
                <label asp-for="ImageURL" class="control-label pt-2" style="font-size: 20px;">Imagem URL</label>
            </div>
            <div class="col-10 pb-3">
                <input asp-for="ImageURL" class="form-control" />
                <span asp-validation-for="ImageURL" class="text-danger"></span>
            </div>

            <div class="col-2">
                <label asp-for="Preco" class="control-label pt-2" style="font-size: 20px;">Preço</label>
            </div>
            <div class="col-10 pb-3">
                <input asp-for="Preco" class="form-control" />
                <span asp-validation-for="Preco" class="text-danger"></span>
            </div>

            <div class="col-5 offset-2">
                <a asp-action="ProdutoIndex" class="btn-primary btn form-control">Retorna para Lista</a>
            </div>
            <div class="col-5">
                <input type="submit" value="Criar" class="btn btn-success form-control" />
            </div>
        </div>
    </div>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}