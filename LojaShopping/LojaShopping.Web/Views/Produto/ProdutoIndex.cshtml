@model IEnumerable<LojaShopping.Web.Models.ProductViewModel>
<br />
<br />
<div class="container p-4 border">
    <div class="row pb-2">
        <div class="col">
            <h1 class="text-primary">
                Produto Listado

            </h1>
        </div>
    </div>
    <div class=" col text-end pt-1">
        <a asp-action="CriarProduto" class="btn btn-outline-primary">
            <i class="fas fa-plus">Creando novo Produto</i>
        </a>

    </div>
    <table class="table">
        <thead>
            <tr>
                <th>Nome</th>
                <th>Categoria</th>
                <th>Preço</th>
            </tr>

        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.Name</td>
                    <td>@item.NomeCategoria</td>
                    <td>@((item.Preco).ToString("c"))</td>
                    <td>
                        <a asp-action="ProdutoUpdate" class="btn btn-success" asp-route-id="@item.Id">
                            <i class="fas fa-edit"></i>
                        </a>
                        @if (User.IsInRole("Admin"))
                        {
                            <a asp-action="ProdutoDelete" class="btn btn-danger" asp-route-id="@item.Id">
                                <i class="fas fa-trash"></i>
                            </a> 
                        }
                        
                    </td>
                </tr>
            }
        </tbody>


    </table>

</div>